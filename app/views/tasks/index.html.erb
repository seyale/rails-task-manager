<h1>TASKS</h1>


<table>
  <th>Status</th>
  <th>Task</th>
  <th>Details</th>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td>
        <% if task.completed %>
          <i class="fa fa-check-square-o"></i>
        <% else %>
          <i class="fa fa-square-o"></i>
        <% end %>
      </td>
      <td><%= link_to task.title, task_path(task) %></td>
      <td><%= task.details %></td>
      <td><%= link_to "edit", edit_task_path(task) %> |Â <%= link_to "delete", task_path(task), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>

